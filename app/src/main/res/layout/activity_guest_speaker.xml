<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#16957C"
        android:padding="@dimen/_5sdp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ic_left_black_24dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guest Speaker List"
            android:textColor="#fff"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/linUploadClick"
            />

        <LinearLayout
            android:id="@+id/linUploadClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:background="@drawable/view_bg"
            android:padding="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            >
            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_add_circle_black_24dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add speaker"
                android:textColor="#fff"
                />

        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/spinner_bg"
        android:layout_margin="@dimen/_10sdp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            />
        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/spinner_bg"
        android:layout_margin="@dimen/_10sdp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Designation"
            />

        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>



    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <TextView
                    android:layout_width="@dimen/_230sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="#5A6268"
                    android:gravity="center"
                    android:text="Name"
                    android:textColor="#fff" />

                    <TextView
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:text="Gender"
                        android:background="#5A6268"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:layout_marginLeft="@dimen/_1sdp"
                        />

                    <TextView
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:text="Designation"
                        android:background="#5A6268"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:layout_marginLeft="@dimen/_1sdp"
                        />
                    <TextView
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:text="Working Place"
                        android:background="#5A6268"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:layout_marginLeft="@dimen/_1sdp"
                        />

                    <TextView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:text="Mobile"
                        android:background="#5A6268"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:layout_marginLeft="@dimen/_1sdp"
                        />

                <TextView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:text="Office Phone"
                        android:background="#5A6268"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:layout_marginLeft="@dimen/_1sdp"
                        />

                <TextView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:text="Email"
                        android:background="#5A6268"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:layout_marginLeft="@dimen/_1sdp"
                        />


                <TextView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:text="Image"
                        android:background="#5A6268"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:layout_marginLeft="@dimen/_1sdp"
                        />

                <TextView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:text="Status"
                        android:background="#5A6268"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:layout_marginLeft="@dimen/_1sdp"
                        />
                <TextView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:text="Action"
                        android:background="#5A6268"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:layout_marginLeft="@dimen/_1sdp"
                        />



            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/recyclerView"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>