<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tvNameModule"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_40sdp"
            android:text="Module Name"
            android:background="@drawable/tv_bg"
            android:gravity="center|left"
            android:paddingLeft="@dimen/_3sdp"
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/tvSessionNo"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_40sdp"
            android:text="Session No"
            android:background="@drawable/tv_bg"
            android:gravity="center|left"
            android:paddingLeft="@dimen/_3sdp"
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/tvSpeakerType"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_40sdp"
            android:text="Speaker Type"
            android:background="@drawable/tv_bg"
            android:gravity="center|left"
            android:paddingLeft="@dimen/_3sdp"
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/tvSpeakerName"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_40sdp"
            android:text="Speaker Name"
            android:background="@drawable/tv_bg"
            android:gravity="center|left"
            android:paddingLeft="@dimen/_3sdp"
            android:textColor="#000"
            />



        <LinearLayout
            android:id="@+id/linView"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/tv_bg"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:background="@drawable/view_bg"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:paddingTop="@dimen/_3sdp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_eye_black_24dp"
                    />
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>
</HorizontalScrollView>