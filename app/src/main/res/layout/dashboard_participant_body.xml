<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="?attr/actionBarSize"
        android:background="#2CA089"
        android:layout_alignParentTop="true"
        >

        <include
            layout="@layout/top_bar"
            >

        </include>

    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="jj"
            android:background="@drawable/view_bg"
            android:textSize="@dimen/_15sdp"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:textColor="#fff"
            />

        <DigitalClock
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/view_bg_red"
            android:textColor="#fff"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textSize="@dimen/_15sdp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/tv_bg"
        android:padding="@dimen/_10sdp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/book"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Law and Administration Course"
                android:layout_marginLeft="@dimen/_10sdp"
                />

          </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bach :"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/_10sdp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LAC110"
                android:textStyle="normal"
                android:layout_marginLeft="@dimen/_10sdp"
                />

        </LinearLayout>

       <TextView
           android:layout_width="match_parent"
           android:layout_height="@dimen/_1sdp"
           android:background="@color/colorPrimary"
           android:layout_marginTop="@dimen/_5sdp"
           />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course Adviser : "
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/_10sdp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LAC110"
                android:textStyle="normal"
                android:layout_marginLeft="@dimen/_10sdp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course Director : "
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/_10sdp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LAC110"
                android:textStyle="normal"
                android:layout_marginLeft="@dimen/_10sdp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course Coordinator "
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/_10sdp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LAC110"
                android:textStyle="normal"
                android:layout_marginLeft="@dimen/_10sdp"
                />

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/clock"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class Routine"
            android:layout_marginLeft="@dimen/_10sdp"
            />

    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_40sdp"
                android:text="Time"
                android:background="#5A6268"
                android:gravity="center"
                android:textColor="#fff"
                />

            <TextView
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_40sdp"
                android:text="Module"
                android:background="#5A6268"
                android:gravity="center"
                android:textColor="#fff"
                android:layout_marginLeft="@dimen/_1sdp"
                />

            <TextView
                android:layout_width="@dimen/_300sdp"
                android:layout_height="@dimen/_40sdp"
                android:text="Session"
                android:background="#5A6268"
                android:gravity="center"
                android:textColor="#fff"
                android:layout_marginLeft="@dimen/_1sdp"
                />

            <TextView
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_40sdp"
                android:text="Trainer Name"
                android:background="#5A6268"
                android:gravity="center"
                android:textColor="#fff"
                android:layout_marginLeft="@dimen/_1sdp"
                />

            <TextView
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_40sdp"
                android:text="Building Name"
                android:background="#5A6268"
                android:gravity="center"
                android:textColor="#fff"
                android:layout_marginLeft="@dimen/_1sdp"
                />

            <TextView
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_40sdp"
                android:text="Venue Name"
                android:background="#5A6268"
                android:gravity="center"
                android:textColor="#fff"
                android:layout_marginLeft="@dimen/_1sdp"
                />




        </LinearLayout>
    </HorizontalScrollView>


</LinearLayout>