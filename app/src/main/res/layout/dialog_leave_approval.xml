<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="@dimen/_5sdp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leave Approval"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/_15sdp"

            />



        <ImageView
            android:id="@+id/imgCancel"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ic_cancel_red_24dp"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="#000"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_3sdp"

        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Applicant Name : "
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/_15sdp"
            android:gravity="left"
            android:textStyle="bold"
            android:textColor="#000"

            />

        <TextView
            android:id="@+id/tvApplicantName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/_15sdp"
            android:textColor="#000"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_3sdp"

        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Department : "
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/_15sdp"
            android:gravity="left"
            android:textStyle="bold"
            android:textColor="#000"

            />

        <TextView
            android:id="@+id/tvDept"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/_15sdp"
            android:textColor="#000"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_3sdp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Designation : "
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/_15sdp"
            android:gravity="left"
            android:textStyle="bold"
            android:textColor="#000"

            />

        <TextView
            android:id="@+id/tvDesignation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/_15sdp"
            android:textColor="#000"

            />

    </LinearLayout>

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_3sdp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Leave Substitute : "
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/_15sdp"
            android:gravity="left"
            android:textStyle="bold"
            android:textColor="#000"

            />

        <TextView
            android:id="@+id/tvLeaveSub"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/_15sdp"
            android:textColor="#000"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_3sdp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Leave Type : "
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/_15sdp"
            android:gravity="left"
            android:textStyle="bold"
            android:textColor="#000"

            />

        <TextView
            android:id="@+id/tvLeaveType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/_15sdp"
            android:textColor="#000"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_3sdp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Number of Days : "
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/_15sdp"
            android:gravity="left"
            android:textStyle="bold"
            android:textColor="#000"

            />

        <TextView
            android:id="@+id/tvNumberOfDays"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/_15sdp"
            android:textColor="#000"

            />

    </LinearLayout>

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_3sdp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Leave Remaining : "
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/_15sdp"
            android:gravity="left"
            android:textStyle="bold"
            android:textColor="#000"

            />

        <TextView
            android:id="@+id/tvLeaveRemain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/_15sdp"
            android:textColor="#000"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_margin="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_3sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Approval"
                android:textColor="#000"
                android:textSize="@dimen/_15sdp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/spinner_bg"
                android:layout_height="@dimen/_40sdp"
                >
                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/spnApprova"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </com.toptoche.searchablespinnerlibrary.SearchableSpinner>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linReject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reject Reason"
            android:textColor="#000"
            android:textSize="@dimen/_15sdp"
            />
        <EditText
            android:id="@+id/etRejectReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_bg"
            android:padding="@dimen/_8sdp"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linHigherAuthDesignation"
        android:layout_margin="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_3sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Higher Authority Designation"
                android:textColor="#000"
                android:textSize="@dimen/_15sdp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/spinner_bg"
                android:layout_height="@dimen/_40sdp"
                >
                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/spnDesignation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </com.toptoche.searchablespinnerlibrary.SearchableSpinner>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linHigherAuth"
        android:layout_margin="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_3sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Higher Authority"
                android:textColor="#000"
                android:textSize="@dimen/_15sdp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/spinner_bg"
                android:layout_height="@dimen/_40sdp"
                >
                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/spnHigherAuth"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </com.toptoche.searchablespinnerlibrary.SearchableSpinner>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="center"
        >

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnSubmitApproval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:background="@drawable/view_bg"
            />

    </LinearLayout>

</LinearLayout>