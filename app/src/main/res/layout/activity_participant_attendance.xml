<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClassRoutineActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#16957C"
        android:padding="@dimen/_5sdp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ic_left_black_24dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Participant Attendance"
            android:layout_centerInParent="true"
            android:textColor="#fff"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        >

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click to Date"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:paddingRight="@dimen/_45sdp"
            android:paddingLeft="@dimen/_45sdp"
            android:background="@drawable/tv_bg"
            android:textSize="@dimen/_15sdp"
            />

        <TextView
            android:id="@+id/tvSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:paddingRight="@dimen/_15sdp"
            android:paddingLeft="@dimen/_15sdp"
            android:background="@drawable/view_bg"
            android:textSize="@dimen/_15sdp"
            android:textColor="#fff"
            android:layout_marginLeft="@dimen/_10sdp"
            />

    </LinearLayout>
    <HorizontalScrollView
        android:id="@+id/viewList"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:visibility="gone"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="@dimen/_230sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:text="Course Name"
                    android:background="#5A6268"
                    android:gravity="center"
                    android:textColor="#fff"
                    />

                <TextView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:text="Batch No"
                    android:background="#5A6268"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:layout_marginLeft="@dimen/_1sdp"
                    />

                <TextView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:text="Date"
                    android:background="#5A6268"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:layout_marginLeft="@dimen/_1sdp"
                    />

                <TextView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:text="View"
                    android:background="#5A6268"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:layout_marginLeft="@dimen/_1sdp"
                    />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>