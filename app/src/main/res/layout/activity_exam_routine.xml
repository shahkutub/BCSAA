<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClassRoutineActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#16957C"
        android:padding="@dimen/_5sdp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ic_left_black_24dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exam Schedule List"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imgBack"
            android:layout_toLeftOf="@+id/linDownload"
            />

        <LinearLayout
            android:id="@+id/linDownload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:padding="@dimen/_3sdp"
            android:background="@drawable/view_bg"
            >

            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/ic_file_download_black_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Download"
                android:textColor="#fff"
                />

        </LinearLayout>
    </RelativeLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:text="Date Time"
                    android:background="#5A6268"
                    android:gravity="center"
                    android:textColor="#fff"
                    />

                <TextView
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:text="Module Name"
                    android:background="#5A6268"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:layout_marginLeft="@dimen/_1sdp"
                    />


                <TextView
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:text="Speaker Name"
                    android:background="#5A6268"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:layout_marginLeft="@dimen/_1sdp"
                    />

                <TextView
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:text="Building Name"
                    android:background="#5A6268"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:layout_marginLeft="@dimen/_1sdp"
                    />

                <TextView
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:text="Venue Name"
                    android:background="#5A6268"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:layout_marginLeft="@dimen/_1sdp"
                    />




            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>